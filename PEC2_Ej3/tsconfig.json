{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2015", // versión de JS a la que se transpilará TS
    "module": "commonjs", // sistema de módulos Node.js trasdicional
    "strict": true, // habilita las verificaciones estrictas de tipo
    "incremental": false /*true*/, // habilita la compilación incremental, acelera la transpilación guardando información de las anteriores transpilaciones
    "tsBuildInfoFile": "./buildcache", // carpeta para almacenar información de transpilaciones incrementales anteriores
  },
  "include": ["controllers","models","services","views"]
}
